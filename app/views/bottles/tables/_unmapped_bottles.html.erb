<table id="unmapped-bottles-table" class="bottle-table table-bordered table-condensed table-hover table-striped" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th>Barcode</th>
    <th>Compound Name</th>
    <th>CAS</th>
    <th>QTY Available</th>
    <th>Units</th>
    <th>Concentration (mM)</th>
    <th>Vendor</th>
    <% if can? :update, @bottle %>
        <th>Comment</th>
        <th>Edit</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @bottles_no_coa.each do |bottle| %>
      <tr>
        <td>
          <%= link_to bottle_path(id: bottle.id), remote: true, class: "btn btn-default btn-xs" do %>
              <%=bottle.stripped_barcode%> <span class="fa fa-list-ul"></span>
          <% end %>
        </td>
        <td><%= bottle.compound_name %></td>
        <td><%= bottle.cas %></td>
        <td><%= bottle.qty_available_mg_ul %></td>
        <td><%= bottle.units %></td>
        <td><%= bottle.concentration_mm %></td>
        <td><%= bottle.vendor %></td>
        <% if can? :update, @bottle %>
            <td><%= bottle.comment %></td>
            <td>
              <%= link_to edit_bottle_path(id: bottle.id), remote: true, class: "btn btn-primary btn-xs" do %>
                  <span class="fa fa-pencil-square-o">Edit</span>
              <% end %>
            </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>