<div class="container top-page">

<div class="row">
  <div class = "col-md-4 col-md-offset-4">

    <% if !flash.empty? %>
        <% flash[:error] = I18n.t(:invalid, :scope => [ :devise, :failure ]) %>
    <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <form class="form-signin">
            <h2 class="form-signin-heading">ChemTrack</h2>
            <div class="field">
              <%= f.label :email, "Username or Email" %><br/>
              <%= f.text_field :email, autofocus: true, class: "form-control", id: "email" %>
            </div>

            <div class="field">
              <%= f.label :password %><br/>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "password" %>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Sign in" , class: "btn btn-lg btn-primary btn-block", id: "sign_in"%>
            </div>

          </form>


      <% end %>

    </div>

  </div>
</div>



<% render "devise/shared/links" %>