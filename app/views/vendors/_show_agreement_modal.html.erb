<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h3 class="modal-title"><%= "Current Agreement " %></h3>
    </div>
    <div class="modal-body">
      <div class="panel panel-default">
        <div class="panel-heading">
          <i class="fa fa-file-text "></i> Current Information
          <div class="pull-right">
            <div class="btn-group">
              <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                Actions
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu pull-right" role="menu">
                <li>  <%= link_to [:edit, @vendor, @agreement] do %>
                      <button class="btn btn-primary btn-xs" style='color:white'>
                        <%= if_active?(@agreement) %>
                        <i class=" fa fa-pencil"></i></button>
                  <% end %>
                </li>
                <% if @agreement.active? %>
                    <li>
                      <%= link_to(new_vendor_agreement_task_order_path(@vendor, @agreement)) do %>
                          <button class='btn btn-primary btn-xs' style='color:white'>Add Task
                            <i class='fa fa-plus-circle'></i>
                          </button>
                      <% end %>
                    </li>
                <% end %>
                <li><%= link_to [:generate_pdf, @vendor, @agreement, :format => :pdf] do %>
                      <button class="btn btn-info btn-xs" style='color:white'>Download PDF
                        <i class=" fa fa-download"></i></button>
                  <% end %>
                </li>
                <li class="divider"></li>
                <li><%= link_to [@vendor, @agreement], method: :delete, data: {confirm: 'Are you sure you want to delete this agreement along with its documents?'} do %>
                      <button class="btn btn-danger btn-xs" style='color:white'>Delete
                        <i class=" fa fa-trash-o"></i></button>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <div id="agreement-current-info">
            <%= render 'agreements/partials/current_content' %>
          </div>
        </div>
      </div>
      <% if @agreement.active? %>
          <div class="panel panel-default">
            <div class="panel-heading">
              <i class="fa fa-file-text "></i> Task Orders
              <div class="pull-right">
                <%= link_to(new_vendor_agreement_task_order_path(@vendor, @agreement)) do %>
                    <button class='btn btn-primary btn-xs' style='color:white'>Add Task
                      <i class='fa fa-plus-circle'></i>
                    </button>
                <% end %>
               </div>
              </div>
              <div class="panel-body">
                <%= render 'task_orders/all_task_orders' %>
              </div>
            </div>

      <% end %>

    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>