<div class=" top-page col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-xs-12">
  <div class="col-xs-6">
    <h1>Editing Vendor</h1>
    <%= form_for @vendor, :html => {:class => "upload_file_form"} do |f| %>
    <%= render 'form', :f => f %>
    <% end%>
    <%= link_to @vendor, :title => 'Show',
                :rel => 'tooltip',
                type: 'button',
                class: 'btn btn-primary',
                style: 'color:white' do %>
        <i class="fa fa-arrow-circle-left"> Show</i>
    <% end %>
    &nbsp;
    <%= link_to vendor_path(id: @vendor.id), :title => 'Back to Vendors',
                :rel => 'tooltip',
                id: 'backVendor',
                type: 'button',
                class: 'btn btn-primary',
                style: 'color:white' do %>
        <i class="fa fa-arrow-circle-left"> Back</i>
    <% end %>
  </div>
</div>