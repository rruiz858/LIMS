<div class="alert alert-info alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <strong>Heads Up!</strong> Reason is needed in order to revoke this agreement
</div>
<%= simple_form_for([@vendor, @agreement]) do |f| %>
    <div class="control-group break_smaller">
      <%= f.label :revoke_reason, "Reason" %>
      <%= f.input :revoke_reason, as: :text, required: false, label: false %>
      <%= f.label :agreement_status_id, "Status" %>
      <div class="break_smaller">
        <%= f.select :agreement_status_id, @revoked.map { |i| [i.status, i.id] }, {}, id: 'status-id', class: "form-control" %>
      </div>
    </div>
    <%= f.hidden_field :vendor_id, :value => @vendor.id %>
    <%= f.hidden_field :active, :value => 0 %>
    <%= button_tag(type: 'submit', class: "btn btn-success", id: "submitAgreement") do %>
        <i class=" fa fa-plus-circle"></i> Revoke
    <% end %>
    <%= link_to 'View Vendor', @vendor, type: 'button', class: 'btn btn-primary ', style: 'color:white' %>
<% end %>