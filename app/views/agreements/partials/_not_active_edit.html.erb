<%= simple_form_for([@vendor, @agreement]) do |f| %>
    <div class="control-group break_smaller">
      <div class="break_smaller">
        <%= f.label :agreement_status_id, "Status" %>
        <%= f.select :agreement_status_id, @statuses.map { |i| [i.status, i.id] }, {}, id: 'status-id', class: "form-control" %>
      </div>
      <%= render 'agreements/partials/form' %>
    </div>
    <%= f.hidden_field :vendor_id, :value => @vendor.id %>
<% end %>