<div class=" top-page col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-xs-12">
  <div class="col-xs-12">
    <%if @agreement.agreement_status.status == "Revoked" %>
    <h1>Un-Revoke Agreement</h1>
    <%else%>
    <h1>Update Agreement</h1>
    <%end%>
  </div>
  <div class="col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-pencil "></i> Update Information
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div id="agreement-update-info">

          <% if @agreement.active %>
              <%= render 'agreements/partials/active_edit' %>
          <% else %>
              <%= render 'agreements/partials/not_active_edit' %>
          <% end %>
        </div>
      </div>
      <!-- /.panel-body -->
    </div>
  </div>

  <div class="col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-file-text "></i> Current Information
      </div>
      <div class="panel-body">
        <div id="agreement-current-info">
          <%= render 'agreements/partials/current_content' %>
        </div>
      </div>
    </div>
  </div>
</div>



