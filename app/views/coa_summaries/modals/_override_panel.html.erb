<div class="panel panel-default">
  <div class="panel-heading">
    <span class="fa fa-check-circle-o"></span> With great power comes great perks
  </div>
  <div class="panel-body">
    <%= form_tag override_gsid_coa_summary_path(coa_summary), method: :post, remote: true do %>
        <div class="break_smaller">
          <%= label_tag 'GSID'%>
          <%= number_field_tag :gsid, nil, class: "form-control" ,id:"gsidOverride"%>
          <div id="gsidErrorMessage"></div>
        </div>
        <div class="break_smaller">
          <%= label_tag 'Comment'%>
          <%= text_area_tag :comment, nil, class: "form-control" , placeholder: "Add Comment", rows: 10 %>
        </div>
        <%= button_tag(type: "submit", class: "btn btn-success", name: nil) do %>
            <span class='fa fa-check-circle-o' aria-hidden="true"></span> Override
        <% end %>
    <% end %>
  </div>
</div>