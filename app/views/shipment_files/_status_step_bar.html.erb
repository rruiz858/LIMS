<div class="row bs-wizard" style="border-bottom:0;">

  <div class="col-xs-3 bs-wizard-step active" id="wizard-step-1">
    <div class="text-center bs-wizard-stepnum">Step 1</div>
    <div class="progress">
      <div class="progress-bar"></div>
    </div>
    <% if !@shipment_file.blank? %>
        <a href="#" class="bs-wizard-dot" id='bottle-dot1'></a>
    <% else %>
        <a href="#" class="bs-wizard-dot" id='createShipmentDot'></a>
    <% end %>
    <div class="bs-wizard-info text-center">Initiate Shipment</div>
  </div>

  <div class="col-xs-3 bs-wizard-step disabled" id ="wizard-step-2">
    <div class="text-center bs-wizard-stepnum">Step 2</div>
    <div class="progress">
      <div class="progress-bar"></div>
    </div>
    <% if !@shipment_file.blank? %>
        <a href="<%= add_bottles_shipment_file_path(@shipment_file) %>" class="bs-wizard-dot" id='addBottlesDot'></a>
    <% else %>
        <a href="#" class="bs-wizard-dot" id='staticButton2'></a>
    <% end %>
    <div class="bs-wizard-info text-center">Add Bottles</div>
  </div>

  <div class="col-xs-3 bs-wizard-step disabled" id ="wizard-step-3">
    <div class="text-center bs-wizard-stepnum">Step 3</div>
    <div class="progress">
      <div class="progress-bar"></div>
    </div>
    <% if !@shipment_file.blank? %>
        <a href="<%= show_plate_shipment_file_path(@shipment_file) %>" class="bs-wizard-dot" id='editPlateDot'></a>
    <% else %>
        <a href="#" class="bs-wizard-dot" id='staticButton3'></a>
    <% end %>
    <div class="bs-wizard-info text-center">Edit Plate</div>
  </div>

  <div class="col-xs-3 bs-wizard-step disabled" id="wizard-step-4">
    <div class="text-center bs-wizard-stepnum">Step 4</div>
    <div class="progress">
      <div class="progress-bar"></div>
    </div>
    <% if !@shipment_file.blank? %>
        <a href="#" class="bs-wizard-dot" id="finalizePlateDot"></a>
    <% else %>
        <a href="#" class="bs-wizard-dot" id='staticButton4'></a>
    <% end %>
    <div class="bs-wizard-info text-center">Finalize</div>
  </div>
</div>

