<div class=" top-page col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-xs-12">
  <div class="col-xs-6">

    <h1>New Shipment File</h1>
    <%= render 'upload_file' %>
    <div class="loading_modal"></div>
    <%= link_to shipment_files_path, :title => 'Back',
                :rel => 'tooltip',
                type: 'button',
                class: 'btn btn-primary',
                style: 'color:white' do %>
        <i class="fa fa-arrow-circle-left"> Back</i>
    <% end %>

  </div>

<% unless @error_array.blank? %>
      <div id="errorModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
          <!-- Modal content-->
          <div class="modal-content panel-danger">
            <div class="modal-header panel-heading">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title"><span class="fa fa-exclamation-triangle"></span>Validation Error</h4>
            </div>
            <div class="modal-body">
              <ul>
                <% @error_array.each do |error| %>
                    <li><%= error %></li>
                <% end %>
              </ul>
            </div>

            <div class="modal-footer panel-danger">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>

        </div>
      </div>
      </div>
    <script>
        $(document).ready(function () {
            $("#errorModal").modal("show");
        })
    </script>
<% end %>