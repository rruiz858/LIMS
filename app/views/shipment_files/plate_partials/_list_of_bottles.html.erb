<table id="list-bottles-table" class="table table-bordered table-condensed table-hover table-striped">
  <thead>
  <tr>
    <th nowrap>Barcodes</th>
    <th nowrap>Well ID</th>
  </tr>
  </thead>
  <tbody>
  <% @results_hash[:shipment_bottles].each do |record| %>
      <tr>
        <td><%= record.barcode %></td>
        <td><%= record.well_id %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#list-bottles-table').DataTable({
            "paging": true
        })
    });
</script>