<table id="shipment-overview-table" class="table table-bordered table-condensed table-hover table-striped">
  <thead>
  <tr>
    <th nowrap>Barcode</th>
    <th nowrap>Well_ID</th>
    <th nowrap>Amount</th>
    <th nowrap>Amount Unit</th>
    <th nowrap>Concentration (mM)</th>
    <th nowrap>Concentration Unit</th>

  </tr>
  </thead>
  <tbody>
  <% @records.each do |record| %>
      <tr>
        <td><%= record.barcode %></td>
        <td><%= record.well_id %></td>
        <td><%= record.amount %></td>
        <td><%= record.amount_unit %></td>
        <td><%= record.concentration %></td>
        <td><%= record.concentration_unit %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
    $('#shipment-overview-table').DataTable({
        "paging": true
    })
</script>