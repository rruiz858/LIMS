<div class=" top-page col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-xs-12">
  <div class="col-xs-6">
    <h1>Upload MSDS</h1>
    <br>
    <%= form_for(:msd, url: {action: "create"}, :html => {:class => "upload_file_form", :multipart => true}) do |f| %>
        <div class="fileinput fileinput-new input-group" data-provides="fileinput">

          <div class="form-control">
            <i class="fa fa-file-excel-o fileinput-exists"></i> <span class="fileinput-filename"></span>
          </div>
          <div class="input-group-btn">
            <div class="btn btn-default btn-file">
              <span class="fileinput-new">Select</span>
              <span class="fileinput-exists">Change</span>
              <%= f.file_field :msds_pdfs, multiple: "true", class: "file-input" %>
            </div>
            <button type="button" class="btn btn-default fileinput-exists" data-dismiss="fileinput" title="remove">
              Remove
            </button>
          </div>
        </div>
        <p class="help-block">Must be .pdf file</p>
        <div class="actions">
          <button type="submit" class="btn btn-success" id="upload-btn">
            <i class ="fa fa-upload"></i> Upload MSDS
          </button>
        </div>
    <% end %>

    <a href="<%= msds_path %>" class="btn btn-primary" style='color:white' title="MSDS Index">
      <span class="fa fa-arrow-circle-left"></span> Back
    </a>

    <div class="loading_modal"></div>

  </div>
</div>